{
  "manifest_version": 3,
  "name": "Ask This Page",
  "version": "1.0",
  "description": "Ask questions about the content of any webpage, YouTube video, or PDF.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://127.0.0.1:5000/*",
    "*://*/*" 
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {              
      "16": "icon.png"
    }
  },
  "icons": {                      
    "16": "icon.png"
  }
}